{
    "env": {
        "test": {
            "presets": ["env", "stage-2"],
            "plugins": [
                [
                    "transform-runtime",
                    {
                        "helpers": false,
                        "polyfill": false,
                        "regenerator": true,
                        "moduleName": "babel-runtime"
                    }
                ]
            ]
        },
        "prod": {
            "presets": [
                ["env", {
                    "modules": false
                }]
            ],
            "plugins": ["external-helpers", "transform-decorators-legacy"]
        }
    }
}